<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
    
<mapper namespace="com.phb.puhuibao.entity.CustomerManagement" >
    <resultMap id="CustomerManagement" type="com.phb.puhuibao.entity.CustomerManagement">
    	    <result property="userName"            column="user_name"            jdbcType="VARCHAR" />	    	    	    
    	    <result property="userTel"             column="user_tel"             jdbcType="VARCHAR" />
    	    <result property="userId"              column="user_id"              jdbcType="VARCHAR" />
    	    <result property="userMail"            column="user_mail"            jdbcType="VARCHAR" />
			<result property="userAddress"         column="user_address"         jdbcType="VARCHAR" />
			<result property="userPost"            column="user_post"            jdbcType="VARCHAR" />
			<result property="userGender"          column="user_gender"          jdbcType="INTEGER" />
			<result property="useridExdate"        column="userid_exdate"        jdbcType="VARCHAR" />
			<result property="useridDep"           column="userid_dep"           jdbcType="VARCHAR" />
			<result property="emergencyContact"    column="emergency_contact"     jdbcType="VARCHAR" />
			<result property="emergencyContactid"  column="emergency_contactid"   jdbcType="VARCHAR" />
			<result property="emergencyContacttel" column="emergency_contacttel"  jdbcType="VARCHAR" />
 
	</resultMap>
	<sql id="allColumn">
          user_name,                        
          user_tel,           
          user_id,            
          user_mail,          
          user_address,       
          user_post,          
          user_gender,
          userid_exdate,
          userid_dep,
          emergency_contact,
          emergency_contactid,
          emergency_contacttel
           
	
	</sql>
 
	<select id="findByPager" parameterType="java.util.Map" resultMap="CustomerManagement">
		<include refid="queryBody" />
	</select>
	
	<select id="CustomerManagementquery" parameterType="java.util.Map" resultMap="CustomerManagement">
		<include refid="queryBody" />
	</select>
	
	<select id="query" parameterType="java.util.Map" resultMap="CustomerManagement">
		select
			<include refid="allColumn" />
			 from
			 crm_customer
			<include refid="dynamicWhere" />
		 
	</select>
	
		<!-- 3.1.根据对像条件查询记录数 MAP参数 -->
	<select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
		select
		count(1)
		from
		crm_customer 
		<include refid="dynamicWhere" />
		    
	</select>
	<select id="getById" parameterType="java.util.Map" resultMap="CustomerManagement">
			select
			<include refid="allColumn" />
			 from
			 crm_customer  
	</select>
	<select id="unique" parameterType="java.util.Map" resultMap="CustomerManagement" >
			select
			<include refid="allColumn" />
			 from
			 crm_customer
			<include refid="dynamicWhere" />
			limit 1
	</select>

	<sql id="dynamicWhere">
			<trim prefix="WHERE" prefixOverrides="AND|OR">
			    is_deleted = 0   
			    <if test="userId!=null">
					AND user_id = #{userId}
				</if>
				<if test="userTel!=null">
					AND user_tel = #{userTel}
				</if>
				<if test="keyword!=null">
					AND (user_tel like concat('%',#{keyword},'%') 
					OR   user_name like concat('%',#{keyword},'%')  )
				</if>

			</trim>
	</sql>
	
 	<!-- order by 排序 -->
	<sql id="dynamicOrderBy">
		<if test="orderBy!=null">
			order by ${orderBy}
			<if test="order!=null">
				${order}
		</if>
		</if>
	</sql>
	

	<insert id="insert" parameterType="com.phb.puhuibao.entity.CustomerManagement" >
	    INSERT INTO 
	    crm_customer(<include refid="allapplColumn"/>	)
		<include refid="allapplColumnVar"/>
	</insert>
	
	<sql id="allapplColumn">
          user_name,                        
          user_tel,           
          user_id,            
          user_mail,          
          user_address,       
          user_post,   
          user_gender,       
          userid_exdate,
          userid_dep,
          emergency_contact,
          emergency_contactid,
          emergency_contacttel
	</sql>
	
	<sql id="allapplColumnVar">
		values(
				#{userName,          jdbcType=VARCHAR},
				#{userTel,           jdbcType=VARCHAR},
				#{userId,            jdbcType=VARCHAR},
				#{userMail,          jdbcType=VARCHAR},
				#{userAddress,       jdbcType=VARCHAR},
				#{userPost,          jdbcType=VARCHAR},
				#{userGender,        jdbcType=INTEGER},
				#{useridExdate,      jdbcType=VARCHAR},
				#{useridDep,         jdbcType=VARCHAR},
				#{emergencyContact,  jdbcType=VARCHAR},
				#{emergencyContactid,jdbcType=VARCHAR},
				#{emergencyContacttel,jdbcType=VARCHAR}
 
		     )
	</sql>
	
	<update id="update" parameterType="com.phb.puhuibao.entity.CustomerManagement">
			update crm_customer
			<trim prefix=" SET " prefixOverrides=",">
				<if test="isDeleted!=null">
					  ,is_deleted=#{isDeleted,jdbcType=INTEGER}
				</if>
			</trim>
			WHERE 
				user_id=#{userId}
	</update>

	<delete id="delete" parameterType="java.util.Map">
		DELETE FROM crm_customer 
		where user_id =#{userId}
	</delete>	
	
	<sql id="queryBody">
		<if test="sno!=null and eno!=null and orderBy!=null">
			select
			<include refid="allColumn" />
			 from
			  crm_customer  
			<include refid="dynamicWhere" />
			<include refid="dynamicOrderBy" />
			limit ${sno-1},${eno}
		</if>
		<!-- 无orderby -->
		<if test="sno!=null and eno!=null and orderBy==null">
			select
			<include refid="allColumn" />
			 from
			crm_customer  
			<include refid="dynamicWhere" />
			limit ${sno-1},${eno}
		</if>
	</sql>	

</mapper>




