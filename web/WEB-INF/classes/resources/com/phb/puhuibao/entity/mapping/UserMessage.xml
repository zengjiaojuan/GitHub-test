<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.UserMessage">

  <!-- RESOURCE RESULTMAP -->

  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.UserMessage">
    <result property="messageId" column="message_id" jdbcType="INTEGER" />
    <result property="mUserId" column="m_user_id" jdbcType="INTEGER" />
    <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    <result property="isRead" column="is_read" jdbcType="INTEGER" />
    
  </resultMap>

  <!-- RESOURCE INSERT -->
  <insert id="insert" parameterType="com.phb.puhuibao.entity.UserMessage">
    insert into phb_muser_message (<include refid="allapplColumn"/>) <include refid="allapplColumnVar"/>
  </insert>
  <!-- RESOURCE UPDATE -->
  <update id="update" parameterType="com.phb.puhuibao.entity.UserMessage">
		update phb_muser_message
		<trim prefix=" SET " prefixOverrides=",">
			<if test="title != null">
				  ,title=#{title,jdbcType=VARCHAR}
			</if>
			<if test="isRead != null">
				  ,is_read=#{isRead,jdbcType=VARCHAR}
			</if>
		</trim>
		where message_id=#{messageId}
  </update>

  <!-- RESOURCE DELETE
  <delete id="delete" parameterType="com.phb.puhuibao.entity.UserMessage">
    delete from phb_muser_message where message_id = #{messageId} 
  </delete>
   -->
  	<delete id="delete" parameterType="java.util.Map">
		delete from phb_muser_message where message_id in (${messageIds})
	</delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> from phb_muser_message <include refid="dynamicWhere" />
  </select>
  <select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
    <include refid="queryBody" />
  </select>
  <select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
	select count(1) from phb_muser_message <include refid="dynamicWhere" />
  </select>
  <select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
	select <include refid="allColumn" /> from phb_muser_message <include refid="dynamicWhere" /> limit 1
  </select>
  <select id="getById" parameterType="java.util.Map" resultMap="resourceResultMap">
	select <include refid="allColumn" /> from phb_muser_message where message_id=#{messageId}
  </select>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
    m_user_id,
    title,
    content,
    create_time
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{mUserId,jdbcType=INTEGER},
			#{title,jdbcType=VARCHAR},
			#{content,jdbcType=LONGVARCHAR},
			#{createTime,jdbcType=TIMESTAMP}
	)
  </sql>
  <sql id="allColumn">
    message_id,
    m_user_id,
    title,
    content,
    is_read,
    create_time
  </sql>
  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="gelastDate != null">
			AND last_date <![CDATA[>]]>= #{gelastDate}
		</if>
		<if test="lastDate != null">
			AND last_date = #{lastDate}
		</if>
		<if test="mUserId != null">
			AND m_user_id = #{mUserId}
		</if>
		<if test="status != null">
			AND status = #{status}
		</if>
		<if test="catId != null">
			AND cat_id = #{catId}
		</if>
	</trim>
  </sql>
  <sql id="dynamicOrderBy">
	<if test="orderBy!=null">
		order by ${orderBy}
		<if test="order!=null">
			${order}
		</if>
	</if>
  </sql>

  <sql id="queryBody">
	<if test="sno!=null and eno!=null and orderBy!=null">
		select <include refid="allColumn" /> from phb_muser_message
		<include refid="dynamicWhere" />
		<include refid="dynamicOrderBy" />
		limit ${sno-1},${eno}
	</if>
	<!-- æ— orderby -->
	<if test="sno!=null and eno!=null and orderBy==null">
		select <include refid="allColumn" /> from phb_muser_message
		<include refid="dynamicWhere" />
		limit ${sno-1},${eno}
	</if>
  </sql>	
  

</mapper>