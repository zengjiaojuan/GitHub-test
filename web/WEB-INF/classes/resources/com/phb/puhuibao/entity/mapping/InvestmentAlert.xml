<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.InvestmentAlert">
  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.InvestmentAlert">
    <result property="alertId" column="alert_id" jdbcType="INTEGER" />
    <result property="alertTitle" column="alert_title" jdbcType="VARCHAR" />
    <result property="alertProduct" column="alert_product" jdbcType="VARCHAR" />
	<result property="alertContent" column="alert_content" jdbcType="VARCHAR" />
	<result property="alertStatus" column="alert_status" jdbcType="TINYINT" />
	<result property="alertDeviceid" column="alert_deviceid" jdbcType="VARCHAR" />
	<result property="alertDevicetype" column="alert_devicetype" jdbcType="TINYINT" />
