<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.CalculateFormula">
  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.CalculateFormula">
    <result property="formulaId"                   column="formula_id"                  jdbcType="VARCHAR" />
    <result property="formulaText"                 column="formula_text"                jdbcType="VARCHAR" />
 
 
  </resultMap>
  
  <!-- RESOURCE INSERT -->
  <insert id="insert" useGeneratedKeys="true"   parameterType="com.phb.puhuibao.entity.CalculateFormula">
    insert into phb_formula (<include refid="allapplColumn"/>) <include refid="allapplColumnVar"/>
  </insert>
  
   
  
  <!-- RESOURCE DELETE -->
  <delete id="delete" parameterType="java.util.Map">
    delete from phb_formula <include refid="dynamicWhere" />
  </delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> 
    from phb_formula 
     
    <include refid="dynamicWhere" />
  </select>
  <select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
    <include refid="queryBody" />
  </select>
  <select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
	select count(1) from phb_formula <include refid="dynamicWhere" />
  </select>
  <select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
	select <include refid="allColumn" /> from phb_formula <include refid="dynamicWhere" /> <include refid="dynamicOrderBy" /> limit 1
  </select>
   <select id="getById" parameterType="java.util.Map" resultMap="resourceResultMap">
	select formula_id,formula_text from phb_formula where formula_id=#{formulaId}
  </select>
  
<update id="update" parameterType="com.phb.puhuibao.entity.CalculateFormula">
		update phb_formula
		<trim prefix=" SET " prefixOverrides=",">
			<if test="photoNumber != null">
				  ,photo_number=#{photoNumber,jdbcType=DECIMAL}
			</if>
 
			 							 
		</trim>
		where m_user_id=#{mUserId} 
  </update>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
	m_user_id,
	photo_number,
	fans_number,
	friends_number,
	user_level 
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{mUserId,          jdbcType=INTEGER},
			#{photoNumber,      jdbcType=DECIMAL},
			#{fansNumber,       jdbcType=DECIMAL},
			#{friendsNumber,    jdbcType=DECIMAL},
			#{userLevel,        jdbcType=DECIMAL} 
	      )
  </sql>
  <sql id="allColumn">
  
	formula_id,
	formula_text 
  </sql>
  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="formulaId != null">
			AND formula_id = #{formulaId}
		</if>
		 
 
	</trim>
  </sql>
  <sql id="dynamicOrderBy">
	<if test="orderBy!=null">
		order by ${orderBy}
		<if test="order!=null">
			${order}
		</if>
	</if>
  </sql>

  <sql id="queryBody">
	<if test="sno!=null and eno!=null and orderBy!=null">
		select <include refid="allColumn" /> from phb_formula
		<include refid="dynamicWhere" />
		<include refid="dynamicOrderBy" />
		limit ${sno-1},${eno}
	</if>
  	<!-- æ— orderby -->
	<if test="sno!=null and eno!=null and orderBy==null">
		select <include refid="allColumn" /> from phb_formula
		<include refid="dynamicWhere" />
		limit ${sno-1},${eno}
	</if>
  </sql>
</mapper>