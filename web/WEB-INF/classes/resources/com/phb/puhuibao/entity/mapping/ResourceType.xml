<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.ResourceType">
  <!-- RESOURCE RESULTMAP -->
  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.ResourceType">
    <id property="typeId" column="type_id" jdbcType="INTEGER" />
    <result property="defaultImage" column="default_image" jdbcType="VARCHAR" />
  </resultMap>

  <!-- RESOURCE INSERT -->
  <insert id="insert" useGeneratedKeys="true" keyProperty="typeId" parameterType="com.phb.puhuibao.entity.ResourceType">
    insert into phb_resource_type (<include refid="allapplColumn"/>) <include refid="allapplColumnVar"/>
  </insert>
  <!-- RESOURCE UPDATE -->
  <update id="update" parameterType="com.phb.puhuibao.entity.ResourceType">
		update phb_resource_type
		<trim prefix=" SET " prefixOverrides=",">
			<if test="name != null">
				  ,name=#{name,jdbcType=VARCHAR}
			</if>
			<if test="icon != null">
				  ,icon=#{icon,jdbcType=VARCHAR}
			</if>
			<if test="defaultImage != null">
				  ,default_image=#{"defaultImage",jdbcType=VARCHAR}
			</if>
		</trim>
		where type_id=#{typeId}
  </update>

  <!-- RESOURCE DELETE -->
  <delete id="delete" parameterType="com.phb.puhuibao.entity.ResourceType">
    delete from phb_resource_type <include refid="dynamicWhere" />
  </delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> from phb_resource_type <include refid="dynamicWhere" />
  </select>
  <select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
    <include refid="queryBody" />
  </select>
  <select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
	select count(1) from phb_resource_type <include refid="dynamicWhere" />
  </select>
  <select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
	select <include refid="allColumn" /> from phb_resource_type <include refid="dynamicWhere" /> limit 1
  </select>
  <select id="getById" parameterType="java.util.Map" resultMap="resourceResultMap">
	select <include refid="allColumn" /> from phb_resource_type where type_id=#{typeId}
  </select>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
	name,
	icon,
	default_image
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{name,jdbcType=VARCHAR},
			#{icon,jdbcType=VARCHAR},
			#{defaultImage,jdbcType=VARCHAR}
	)
  </sql>
  <sql id="allColumn">
    type_id,
	name,
	icon,
	default_image
  </sql>
  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="typeId != null">
			AND type_id = #{typeId}
		</if>
	</trim>
  </sql>
  <sql id="dynamicOrderBy">
	<if test="orderBy!=null">
		order by ${orderBy}
		<if test="order!=null">
			${order}
		</if>
	</if>
  </sql>

  <sql id="queryBody">
	<if test="sno!=null and eno!=null and orderBy!=null">
		select <include refid="allColumn" /> from phb_resource_type
		<include refid="dynamicWhere" />
		<include refid="dynamicOrderBy" />
		limit ${sno-1},${eno}
	</if>
	<!-- æ— orderby -->
	<if test="sno!=null and eno!=null and orderBy==null">
		select <include refid="allColumn" /> from phb_resource_type
		<include refid="dynamicWhere" />
		limit ${sno-1},${eno}
	</if>
  </sql>	
  
</mapper>