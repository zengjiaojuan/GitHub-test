  </insert>
  <!-- RESOURCE UPDATE -->
  <update id="update" parameterType="com.phb.puhuibao.entity.Order">
		update phb_order
		<trim prefix=" SET " prefixOverrides=",">
			<if test="price != null">
				  ,price=#{price,jdbcType=DECIMAL}
			</if>
			<if test="memberPrice != null">
				  ,member_price=#{memberPrice,jdbcType=DECIMAL}
			</if>
			<if test="number != null">
				  ,number=#{number,jdbcType=SMALLINT}
			</if>
			<if test="brokerage != null">
				  ,brokerage=#{brokerage,jdbcType=DECIMAL}
			</if>
			<if test="payStatus != null">
				  ,pay_status=#{payStatus,jdbcType=TINYINT}
			</if>
		</trim>
		where order_id=#{orderId}
  </update>

  <!-- RESOURCE DELETE -->
  <delete id="delete" parameterType="com.phb.puhuibao.entity.Order">
    delete from phb_order where order_id=#{orderId}
  </delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> from phb_order <include refid="dynamicWhere" />
