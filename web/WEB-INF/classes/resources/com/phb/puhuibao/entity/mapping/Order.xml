  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="appreciationId != null">
			AND appreciation_Id = #{appreciationId}
		</if>
		<if test="mUserId != null">
			AND m_user_id = #{mUserId}
		</if>
