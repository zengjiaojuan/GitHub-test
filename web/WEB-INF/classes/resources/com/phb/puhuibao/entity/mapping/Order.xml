  <select id="getById" parameterType="java.util.Map" resultMap="resourceResultMap">
	select <include refid="allColumn" /> from phb_order where order_id=#{orderId}
  </select>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
    m_user_id,
    appreciation_id,
    number,
    price,
    member_price,
    create_time
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{mUserId,jdbcType=INTEGER},
			#{appreciationId,jdbcType=INTEGER},
			#{number,jdbcType=SMALLINT},
			#{price,jdbcType=DECIMAL},
			#{memberPrice,jdbcType=DECIMAL},
