<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.Bank">
  <!-- RESOURCE RESULTMAP -->
  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.Bank">
    <result property="bankId" column="bank_id" jdbcType="TINYINT" />
    <result property="bankName" column="bank_name" jdbcType="VARCHAR" />
  </resultMap>
  
  <!-- RESOURCE INSERT -->
  <insert id="insert" useGeneratedKeys="true" keyProperty="bankId" parameterType="com.phb.puhuibao.entity.Bank">
    insert into phb_bank (<include refid="allapplColumn"/>) <include refid="allapplColumnVar"/>
  </insert>
  
  <!-- RESOURCE UPDATE -->
  <update id="update" parameterType="com.phb.puhuibao.entity.Bank">
		update phb_bank
		<trim prefix=" SET " prefixOverrides=",">
			<if test="bankName != null">
				  ,bank_name=#{bankName,jdbcType=VARCHAR}
			</if>
		</trim>
		where bank_id=#{bankId}
  </update>
  
  <!-- RESOURCE DELETE -->
  <delete id="delete" parameterType="java.util.Map">
    delete from phb_bank where bank_id=#{bankId}
  </delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> from phb_bank <include refid="dynamicWhere" />
  </select>
  <select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
    <include refid="queryBody" />
  </select>
  <select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
	select count(1) from phb_bank <include refid="dynamicWhere" />
  </select>
  <select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
	select <include refid="allColumn" /> from phb_bank <include refid="dynamicWhere" /> <include refid="dynamicOrderBy" /> limit 1
  </select>
  <select id="getById" parameterType="java.util.Map" resultMap="resourceResultMap">
	select * from phb_bank where bank_id=#{bankId}
  </select>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
	bank_name
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{bankName,jdbcType=VARCHAR}
	)
  </sql>
  <sql id="allColumn">
    bank_id,
	bank_name
  </sql>
  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="bankId != null">
			AND bank_id = #{bankId}
		</if>
		<if test="bankName != null">
			AND bank_name = #{bankName}
		</if>
	</trim>
  </sql>
  <sql id="dynamicOrderBy">
	<if test="orderBy!=null">
		order by ${orderBy}
		<if test="order!=null">
			${order}
		</if>
	</if>
  </sql>

  <sql id="queryBody">
	<if test="sno!=null and eno!=null and orderBy!=null">
		select <include refid="allColumn" /> from phb_bank
		<include refid="dynamicWhere" />
		<include refid="dynamicOrderBy" />
		limit ${sno-1},${eno}
	</if>
  	<!-- æ— orderby -->
	<if test="sno!=null and eno!=null and orderBy==null">
		select <include refid="allColumn" /> from phb_bank
		<include refid="dynamicWhere" />
		limit ${sno-1},${eno}
	</if>
  </sql>
</mapper>