<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.idap.clinic.entity.UserInformation" >
    <resultMap id="UserInformation" type="com.idap.clinic.entity.UserInformation">
		<result property="mUserId" column="M_USER_ID" jdbcType="VARCHAR" />
		<result property="mUserName" column="M_USER_NAME" jdbcType="VARCHAR" />
		<result property="mUserPwd" column="M_USER_PWD" jdbcType="VARCHAR" />
		<result property="mUserTel" column="M_USER_TEL" jdbcType="VARCHAR" />
		<result property="mDate" column="M_DATE" jdbcType="DATE" />
		<result property="thirdParty" column="third_party" jdbcType="VARCHAR" />
		<result property="photo" column="photo" jdbcType="VARCHAR" />    	 
		<result property="sex" column="sex" jdbcType="INTEGER" />    	 
		<result property="age" column="age" jdbcType="INTEGER" />    	 
		<result property="occupation" column="occupation" jdbcType="VARCHAR" />    	 
	</resultMap>
	
	<sql id="queryBody">
		<if test="sno!=null and eno!=null and orderBy!=null">
			select
			<include refid="allColumn" />
			 from
			MOBILE_USER  t
			<include refid="dynamicWhere" />
			<include refid="dynamicOrderBy" />
			limit ${sno-1},${eno}
		</if>
		<!-- 无orderby -->
		<if test="sno!=null and eno!=null and orderBy==null">
			select
			<include refid="allColumn" />
			 from
			MOBILE_USER t
			<include refid="dynamicWhere" />
			limit ${sno-1},${eno}
		</if>
	</sql>	
	   <sql id="allColumn">
	        t.M_USER_ID,
	        t.M_USER_NAME,
	        t.M_USER_PWD,
	        t.M_USER_TEL,
			t.photo,
			t.sex,
			t.age,
			t.occupation
	</sql>
 
 	<select id="query" parameterType="java.util.Map" resultMap="UserInformation">
		select t.M_USER_ID,
	           t.M_USER_NAME,
	           t.M_USER_TEL
	    from MOBILE_USER t
	    left join USER_ORDER o on (t.M_USER_ID=o.ORDER_USER_ID )
	    <include refid="dynamicWhere" />
	 
	</select>
 
	<select id="findByPager" parameterType="java.util.Map" resultMap="UserInformation">
		<include refid="queryBody" />
	</select>
	<!-- 3.1.根据对像条件查询记录数 MAP参数 -->
	<select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
		select
		count(1)
		from
		MOBILE_USER
		<include refid="dynamicWhere" />
		    
	</select>
	<select id="unique" parameterType="java.util.Map" resultMap="UserInformation" >
			select
			<include refid="allColumn" />
			 from
			MOBILE_USER  t
			<include refid="dynamicWhere" />
			limit 1
	</select>
	<select id="getById" parameterType="java.util.Map" resultMap="UserInformation">
			select
			<include refid="allColumn" />
			 from MOBILE_USER t where t.M_USER_ID=#{mUserId}
	</select>

	<sql id="dynamicWhere">
			<trim prefix="WHERE" prefixOverrides="AND|OR">
				<if test="mUserId!=null">
					AND M_USER_ID = #{mUserId}
				</if>
				<if test="mUserTel!=null">
					AND M_USER_TEL = #{mUserTel}
				</if>
				<if test="mUserPwd!=null">
					AND M_USER_PWD = #{mUserPwd}
				</if>
				<if test="thirdParty!=null">
					AND third_party = #{thirdParty}
				</if>
			</trim>
	</sql>
	
 	<!-- order by 排序 -->
	<sql id="dynamicOrderBy">
		<if test="orderBy!=null">
			order by ${orderBy}
			<if test="order!=null">
				${order}
		</if>
		</if>
	</sql>
	

	<insert id="insert" parameterType="com.idap.clinic.entity.UserInformation" >
	    INSERT INTO 
	    MOBILE_USER(<include refid="allapplColumn"/>	)
		<include refid="allapplColumnVar"/>
	</insert>
	
	<sql id="allapplColumn">
	            M_USER_ID,
				M_USER_NAME,
				M_USER_PWD,
				M_USER_TEL,
				M_DATE,
				third_party,
			photo,
			sex,
			age,
			occupation
	</sql>
	
	<sql id="allapplColumnVar">
		values(
		#{mUserId,jdbcType=VARCHAR},
		#{mUserName,jdbcType=DATE},
		#{mUserPwd,jdbcType=VARCHAR},
		#{mUserTel,jdbcType=VARCHAR},
		#{mDate,jdbcType=DATE},
		#{thirdParty,jdbcType=VARCHAR},
		#{photo,jdbcType=VARCHAR},
		#{sex,jdbcType=INTEGER},
		#{age,jdbcType=INTEGER},
		#{occupation,jdbcType=VARCHAR}
		)
	</sql>

	<update id="update" parameterType="com.idap.clinic.entity.UserInformation">
			update MOBILE_USER
			<trim prefix=" SET " prefixOverrides=",">
				<if test="mUserName!=null">
					  ,M_USER_NAME=#{mUserName,jdbcType=VARCHAR}
				</if>
				<if test="mUserTel!=null">
					  ,M_USER_TEL=#{mUserTel,jdbcType=VARCHAR}
				</if>
				<if test="mUserPwd!=null">
					  ,M_USER_PWD=#{mUserPwd,jdbcType=VARCHAR}
				</if>
				<if test="thirdParty!=null">
					  ,third_party=#{thirdParty,jdbcType=VARCHAR}
				</if>
				<if test="photo!=null">
					  ,photo=#{photo,jdbcType=VARCHAR}
				</if>
				<if test="sex!=null">
					  ,sex=#{sex,jdbcType=INTEGER}
				</if>
				<if test="age!=null">
					  ,age=#{age,jdbcType=INTEGER}
				</if>
				<if test="occupation!=null">
					  ,occupation=#{occupation,jdbcType=VARCHAR}
				</if>
			</trim>
			WHERE 
				M_USER_ID=#{mUserId}
	</update>

	<delete id="delete" parameterType="java.util.Map">
		DELETE FROM MOBILE_USER 
	    <include refid="dynamicWhere" />
	</delete>	


</mapper>




