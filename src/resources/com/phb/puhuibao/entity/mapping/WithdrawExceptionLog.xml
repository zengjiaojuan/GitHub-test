<mapper namespace="com.phb.puhuibao.entity.WithdrawExceptionLog" >
    <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.WithdrawExceptionLog">
            <result property="withdrawLogId"                column="withdraw_log_id"               jdbcType="INTEGER" />
            <result property="mUserId"                      column="m_user_id"                     jdbcType="INTEGER" />
            <result property="withdrawAmount"               column="withdraw_amount"               jdbcType="DECIMAL" />
            <result property="exceptinoType"                column="exception_type"                jdbcType="INTEGER" />    	    
    	    
	</resultMap>
	
   
	
	
	<sql id="allColumn">
	       withdraw_log_id  ,
		   m_user_id	    ,
		   withdraw_amount	,
	       exception_type
	</sql>
 
	<select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
		<include refid="queryBody" />
	</select>

	
	<select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
		select
			<include refid="allColumn" />
			 from
			 withdraw_exception_log  
			<include refid="dynamicWhere" />
		 
	</select>
	
		
	<!-- 3.1.根据对像条件查询记录数 MAP参数 --><select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
		select
		count(1)
		from
		withdraw_exception_log 
		<include refid="dynamicWhere" />
		    
	</select>
	<select id="getById" parameterType="java.util.Map" resultMap="resourceResultMap">
			select
			<include refid="allColumn" />
			 from
			 withdraw_exception_log  
	</select>
	<select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
			select
			<include refid="allColumn" />
			 from
			 withdraw_exception_log 
			<include refid="dynamicWhere" />
			limit 1
	</select>

	<sql id="dynamicWhere">
			<trim prefix="WHERE" prefixOverrides="AND|OR">
				<if test="withdrawLogId !=null">
					AND withdraw_log_id = #{withdrawLogId}
				</if>
				 
			</trim>
	</sql>
 
 	<!-- order by 排序 -->
	<sql id="dynamicOrderBy">
		<if test="orderBy!=null">
			order by ${orderBy}
			<if test="order!=null">
				${order}
		</if>
		</if>
	</sql>
	

	<insert id="insert" parameterType="com.phb.puhuibao.entity.WithdrawExceptionLog" >
	    INSERT INTO 
	    withdraw_exception_log(<include refid="allapplColumn"/>	)
		<include refid="allapplColumnVar"/>
	</insert>
	
	<sql id="allapplColumn">
		
		   m_user_id	    ,
		   withdraw_amount	,
	       exception_type
         
	</sql>
	
	
 
	
	<sql id="allapplColumnVar">
		values(
				  
		          #{mUserId,             jdbcType=INTEGER},                 
		          #{withdrawAmount,         jdbcType=DECIMAL},
		          #{exceptinoType,              jdbcType=INTEGER}
		         
		           
		         
		     )
	</sql>
	
	<update id="update" parameterType="com.phb.puhuibao.entity.WithdrawExceptionLog">
			update withdraw_exception_log
			<trim prefix=" SET " prefixOverrides=",">
				<if test="exceptionType !=null">
					  ,exception_type=#{exceptionType,jdbcType=INTEGER}
				</if>
				 
				
				
			</trim>
			WHERE 
				withdraw_log_id=#{withdrawLogId}
	</update>

	<delete id="delete" parameterType="java.util.Map">
		DELETE FROM withdraw_exception_log 
		where withdraw_log_id=#{withdrawLogId} 
	</delete>	
	
	<sql id="queryBody">
		<if test="sno!=null and eno!=null and orderBy!=null">
			select
			<include refid="allColumn" />
			 from
			  withdraw_exception_log   
			<include refid="dynamicWhere" />
			<include refid="dynamicOrderBy" />
			limit ${sno-1},${eno}
		</if>
		<!-- 无orderby -->
		<if test="sno!=null and eno!=null and orderBy==null">
			select
			<include refid="allColumn" />
			 from
			withdraw_exception_log 
			<include refid="dynamicWhere" />
			limit ${sno-1},${eno}
		</if>
	</sql>	

</mapper>




