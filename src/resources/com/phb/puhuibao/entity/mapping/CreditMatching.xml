<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
    
<mapper namespace="com.phb.puhuibao.entity.CreditMatching" >
    <resultMap id="CreditMatching" type="com.phb.puhuibao.entity.CreditMatching">
    	    <result property="borrowId"                 column="borrow_id"            jdbcType="INTEGER" />
    	    <result property="borrowerName"             column="borrower_name"        jdbcType="VARCHAR" />
    	    <result property="borrowPersentage"         column="borrow_persentage"    jdbcType="DECIMAL" />	    	    	    
    	    <result property="borrowAmount"             column="borrow_amount"        jdbcType="DECIMAL" />
    	    <result property="borrowLeft"               column="borrow_left"          jdbcType="DECIMAL" />
    	    <result property="batchName"                column="batch_name"           jdbcType="VARCHAR" />
    	    
 
	</resultMap>
	<sql id="allColumn">
	      borrow_id,        
          borrower_name,                        
          borrow_persentage,            
          borrow_amount,          
          borrow_left,
          batch_name 
	</sql>
 
	<select id="findByPager" parameterType="java.util.Map" resultMap="CreditMatching">
		<include refid="queryBody" />
	</select>
	
	<select id="CreditMatchingquery" parameterType="java.util.Map" resultMap="CreditMatching">
		<include refid="queryBody" />
	</select>
	
	<select id="query" parameterType="java.util.Map" resultMap="CreditMatching">
		select
			<include refid="allColumn" />
			 from
			 crm_creditmatch  
			<include refid="dynamicWhere" />
		 
	</select>
	
		<!-- 3.1.根据对像条件查询记录数 MAP参数 -->
	<select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
		select
		count(1)
		from
		crm_creditmatch  
		<include refid="dynamicWhere" />
		    
	</select>
	<select id="getById" parameterType="java.util.Map" resultMap="CreditMatching">
			select
			<include refid="allColumn" />
			 from
			 crm_creditmatch   
	</select>
	<select id="unique" parameterType="java.util.Map" resultMap="CreditMatching" >
			select
			<include refid="allColumn" />
			 from
			 crm_creditmatch 
			<include refid="dynamicWhere" />
			limit 1
	</select>

	<sql id="dynamicWhere">
			<trim prefix="WHERE" prefixOverrides="AND|OR">
			    
			    <if test="batchName!=null">
					AND batch_name = #{batchName}
				</if>
 
				 

			</trim>
	</sql>
	
 	<!-- order by 排序 -->
	<sql id="dynamicOrderBy">
		<if test="orderBy!=null">
			order by ${orderBy}
			<if test="order!=null">
				${order}
		</if>
		</if>
	</sql>
	

	<insert id="insert" parameterType="com.phb.puhuibao.entity.CreditMatching" >
	    INSERT INTO 
	    crm_creditmatch(<include refid="allapplColumn"/>	)
		<include refid="allapplColumnVar"/>
	</insert>
	
	<sql id="allapplColumn">
	      borrow_id,        
          borrower_name,                        
          borrow_persentage,            
          borrow_amount,          
          borrow_left,
          batch_name 
         
	</sql>
	
	
 
	
	<sql id="allapplColumnVar">
		values(
				#{borrowId,         jdbcType=INTEGER},
				#{borrowerName,     jdbcType=VARCHAR},
				#{borrowPersentage, jdbcType=DECIMAL},
				#{borrowAmount,     jdbcType=DECIMAL},
				#{borrowLeft,       jdbcType=DECIMAL},
				#{batchName,        jdbcType=VARCHAR} 
		     )
	</sql>
	
	<update id="update" parameterType="com.phb.puhuibao.entity.CreditMatching">
			update crm_creditmatch
			<trim prefix=" SET " prefixOverrides=",">
				<if test="isDeleted!=null">
					  ,is_deleted=#{isDeleted,jdbcType=INTEGER}
				</if>
 
				
				
			</trim>
			WHERE 
				contract_id=#{contractId}
	</update>

	<delete id="delete" parameterType="java.util.Map">
		DELETE FROM crm_creditmatch 
		where batch_name =#{batchName}
	</delete>	
	
	<sql id="queryBody">
		<if test="sno!=null and eno!=null and orderBy!=null">
			select
			<include refid="allColumn" />
			 from
			  crm_creditmatch   
			<include refid="dynamicWhere" />
			<include refid="dynamicOrderBy" />
			limit ${sno-1},${eno}
		</if>
		<!-- 无orderby -->
		<if test="sno!=null and eno!=null and orderBy==null">
			select
			<include refid="allColumn" />
			 from
			crm_creditmatch  
			<include refid="dynamicWhere" />
			limit ${sno-1},${eno}
		</if>
	</sql>	

</mapper>




