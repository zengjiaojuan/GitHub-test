<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.Invite">
  <!-- RESOURCE RESULTMAP -->
  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.Invite">
    <result property="inviteId" column="invite_id" jdbcType="INTEGER" />
    <result property="mUserId" column="m_user_id" jdbcType="INTEGER" />
    <result property="lastDate" column="last_date" jdbcType="DATE"/>
    <result property="mUserName" column="m_user_name" jdbcType="VARCHAR" />
  </resultMap>

  <!-- RESOURCE INSERT -->
  <insert id="insert" useGeneratedKeys="true" keyProperty="inviteId" parameterType="com.phb.puhuibao.entity.Invite">
    insert into phb_invite (<include refid="allapplColumn"/>) <include refid="allapplColumnVar"/>
  </insert>

  <!-- RESOURCE DELETE -->
  <delete id="delete" parameterType="com.phb.puhuibao.entity.Invite">
    delete from phb_invite where invite_id = #{inviteId}
  </delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> from phb_invite <include refid="dynamicWhere" />
  </select>
  <select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
    <include refid="queryBody" />
  </select>
  <select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
	select count(1) from phb_mobile_user b where b.parent_id in(select m_user_id from phb_mobile_user where parent_id=#{muid}) or b.parent_id=#{muid}
  </select>
  <select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
	select <include refid="allColumn" /> from phb_invite <include refid="dynamicWhere" /> limit 1
  </select>
  <select id="getById" parameterType="java.util.Map" resultMap="resourceResultMap">
	select <include refid="allColumn" /> from phb_invite where invite_id = #{inviteId}
  </select>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
    m_user_id,
    code,
    last_date
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{mUserId,jdbcType=INTEGER},
			#{code,jdbcType=CHAR},
			#{lastDate,jdbcType=DATE}
	)
  </sql>
  <sql id="allColumn">
    m_user_id,
    code,
    last_date
  </sql>
  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="mUserId != null">
			AND m_user_id = #{mUserId}
		</if>
		<if test="code != null">
			AND code = #{code}
		</if>
	</trim>
  </sql>
  <sql id="dynamicOrderBy">
	<if test="orderBy!=null">
		order by ${orderBy}
		<if test="order!=null">
			${order}
		</if>
	</if>
  </sql>

  <sql id="queryBody">
	<if test="sno!=null and eno!=null and orderBy!=null">
		select <include refid="allColumn" /> from phb_invite
		<include refid="dynamicWhere" />
		<include refid="dynamicOrderBy" />
		limit ${sno-1},${eno}
	</if>
	<!-- æ— orderby -->
	<if test="sno!=null and eno!=null and orderBy==null">
        select m_user_name,photo,commission from phb_mobile_user b left join (select from_user,sum(amount) commission from (select from_user,amount from phb_muser_account_log where m_user_id=#{muid} and from_user>0)a group by from_user)c on b.m_user_id=c.from_user where b.parent_id in(select m_user_id from phb_mobile_user where parent_id=#{muid}) or b.parent_id=#{muid}
		limit ${sno-1},${eno}
	</if>
  </sql>	
  
</mapper>