<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.ResourceReport">
  <!-- RESOURCE RESULTMAP -->
  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.ResourceReport">
    <result property="reportId" column="order_id" jdbcType="INTEGER" />
    <result property="mUserId" column="m_user_id" jdbcType="INTEGER" />
    <result property="resourceId" column="resource_id" jdbcType="INTEGER" />
    <result property="causeId" column="cause_id" jdbcType="TINYINT" />
	<result property="content" column="content" jdbcType="VARCHAR" />
  </resultMap>

  <!-- RESOURCE INSERT -->
  <insert id="insert" useGeneratedKeys="true" keyProperty="reportId" parameterType="com.phb.puhuibao.entity.ResourceReport">
    insert into phb_resource_report (<include refid="allapplColumn"/>) <include refid="allapplColumnVar"/>
  </insert>
  <!-- RESOURCE UPDATE -->
  <update id="update" parameterType="com.phb.puhuibao.entity.ResourceReport">
		update phb_resource_report
		<trim prefix=" SET " prefixOverrides=",">
			<if test="causeId != null">
				  ,cause_id=#{causeId,jdbcType=TINYINT}
			</if>
		</trim>
		where report_id=#{reportId}
  </update>

  <!-- RESOURCE DELETE -->
  <delete id="delete" parameterType="com.phb.puhuibao.entity.ResourceReport">
    delete from phb_resource_report where report_id=#{reportId}
  </delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> from phb_resource_report <include refid="dynamicWhere" />
  </select>
  <select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
    <include refid="queryBody" />
  </select>
  <select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
	select count(1) from phb_resource_report <include refid="dynamicWhere" />
  </select>
  <select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
	select <include refid="allColumn" /> from phb_resource_report <include refid="dynamicWhere" /> limit 1
  </select>
  <select id="getById" parameterType="java.util.Map" resultMap="resourceResultMap">
	select <include refid="allColumn" /> from phb_resource_report where report_id=#{reportId}
  </select>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
    m_user_id,
    resource_id,
    cause_id,
    content
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{mUserId,jdbcType=INTEGER},
			#{resourceId,jdbcType=INTEGER},
			#{causeId,jdbcType=TINYINT},
			#{content,jdbcType=VARCHAR}
	)
  </sql>
  <sql id="allColumn">
    report_id,
    m_user_id,
    resource_id,
    cause_id,
    content
  </sql>
  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="resourceId != null">
			AND resource_id = #{resourceId}
		</if>
		<if test="mUserId != null">
			AND m_user_id = #{mUserId}
		</if>
	</trim>
  </sql>
  <sql id="dynamicOrderBy">
	<if test="orderBy!=null">
		order by ${orderBy}
		<if test="order!=null">
			${order}
		</if>
	</if>
  </sql>

  <sql id="queryBody">
	<if test="sno!=null and eno!=null and orderBy!=null">
		select <include refid="allColumn" /> from phb_resource_report
		<include refid="dynamicWhere" />
		<include refid="dynamicOrderBy" />
		limit ${sno-1},${eno}
	</if>
	<!-- æ— orderby -->
	<if test="sno!=null and eno!=null and orderBy==null">
		select <include refid="allColumn" /> from phb_resource_report
		<include refid="dynamicWhere" />
		limit ${sno-1},${eno}
	</if>
  </sql>
</mapper>