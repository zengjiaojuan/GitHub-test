<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.FriendInvite">
  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.FriendInvite">
     
    <result property="inviteId"             column="invite_id"          jdbcType="INTEGER" />
    <result property="fromUser"             column="from_user"          jdbcType="INTEGER" />
    <result property="fromUsername"         column="from_username"       jdbcType="VARCHAR" />
	<result property="toUser"               column="to_user"            jdbcType="INTEGER" />
	<result property="isAccepted"           column="is_accepted"        jdbcType="INTEGER" />
	<result property="inviteMessage"        column="invite_message"     jdbcType="VARCHAR" />
	<result property="fromUserphoto"        column="photo"              jdbcType="VARCHAR" />
 
  </resultMap>
  
  <!-- RESOURCE INSERT -->
  <insert id="insert" useGeneratedKeys="true"   parameterType="com.phb.puhuibao.entity.FriendInvite">
    insert into phb_friend_invite (<include refid="allapplColumn"/>) <include refid="allapplColumnVar"/>
  </insert>
  
   
  
  <!-- RESOURCE DELETE -->
  <delete id="delete" parameterType="java.util.Map">
    delete  from phb_friend_invite   <include refid="dynamicWhere" />
  </delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> 
    from phb_friend_invite f
    left join phb_mobile_user u on f.from_user = u.m_user_id
    
    <include refid="dynamicWhere" />
  </select>
  <select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
    <include refid="queryBody" />
  </select>
  <select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
	select count(1) from phb_friend_invite <include refid="dynamicWhere" />
  </select>
  <select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
	select 	
		f.invite_id,
		f.from_user,
		f.from_username,
		f.to_user,
		f.is_accepted,
		f.invite_message
	from phb_friend_invite   f
	<include refid="dynamicWhere" />
	 <include refid="dynamicOrderBy" /> limit 1
  </select>
 
  
<update id="update" parameterType="com.phb.puhuibao.entity.FriendInvite">
		update phb_friend_invite
		<trim prefix=" SET " prefixOverrides=",">
			<if test="isAccepted != null">
				  ,is_accepted=#{isAccepted,jdbcType=INTEGER}
			</if>
			 				 
		</trim>
		where invite_id=#{inviteId}  
  </update>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
	from_user,
	from_username,
	to_user,
	invite_message 
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{fromUser,          jdbcType=INTEGER},
			#{fromUsername,      jdbcType=VARCHAR},
			#{toUser,            jdbcType=INTEGER},
			#{inviteMessage,     jdbcType=VARCHAR} 
	      )
  </sql>
  <sql id="allColumn">
  
	f.invite_id,
	f.from_user,
	f.from_username,
	f.to_user,
	f.is_accepted,
	f.invite_message,
	u.photo 
 
  </sql>
  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="fromUser != null">
			AND from_user = #{fromUser}
		</if>
		<if test="toUser != null">
			AND to_user = #{toUser}
		</if>
		
		<!--currentuserId 自己关注别人  -->
		<if test="isAccepted != null">
			AND is_accepted = #{isAccepted}
		</if>
		
		<if test="inviteId != null">
			AND invite_id = #{inviteId}
		</if>
 
	</trim>
  </sql>
  <sql id="dynamicOrderBy">
	<if test="orderBy!=null">
		order by ${orderBy}
		<if test="order!=null">
			${order}
		</if>
	</if>
  </sql>

  <sql id="queryBody">
	<if test="sno!=null and eno!=null and orderBy!=null">
		select <include refid="allColumn" /> from phb_friend_invite f
		<include refid="dynamicWhere" />
		<include refid="dynamicOrderBy" />
		limit ${sno-1},${eno}
	</if>
  	<!-- 无orderby -->
	<if test="sno!=null and eno!=null and orderBy==null">
		select <include refid="allColumn" /> from phb_friend_invite f
		<include refid="dynamicWhere" />
		limit ${sno-1},${eno}
	</if>
  </sql>
</mapper>