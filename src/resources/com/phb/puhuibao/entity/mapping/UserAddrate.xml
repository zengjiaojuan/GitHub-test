<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
    
<mapper namespace="com.phb.puhuibao.entity.UserAddrate" >
    <resultMap id="UserAddrate" type="com.phb.puhuibao.entity.UserAddrate">
    
    
            <result property="recordId"            column="record_id"               jdbcType="INTEGER" />
            <result property="muserId"             column="muser_id"                jdbcType="INTEGER" />
            <result property="rateId"              column="rate_id"                 jdbcType="INTEGER" />
    	    <result property="rateStatus"          column="rate_status"             jdbcType="INTEGER" />
    	    <result property="lastDate"            column="last_date"               jdbcType="DATE" />	    	    	    
    	    <result property="createTime"          column="create_time"             jdbcType="TIMESTAMP" />
 
	</resultMap>
  
	<sql id="allColumn">
	        record_id,
			muser_id,
			rate_id	,
			rate_status,
			last_date,
			create_time 
	</sql>
 
	<select id="findByPager" parameterType="java.util.Map" resultMap="UserAddrate">
		<include refid="queryBody" />
	</select>
	
	<select id="UserAddratequery" parameterType="java.util.Map" resultMap="UserAddrate">
		<include refid="queryBody" />
	</select>
	
	<select id="query" parameterType="java.util.Map" resultMap="UserAddrate">
		select
			<include refid="allColumn" />
			 from
			 phb_muser_addrate
			<include refid="dynamicWhere" />
		 
	</select>
	
		
	<!-- 3.1.根据对像条件查询记录数 MAP参数 --><select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
		select
		count(1)
		from
		phb_muser_addrate 
		<include refid="dynamicWhere" />
		    
	</select>
	<select id="getById" parameterType="java.util.Map" resultMap="UserAddrate">
			select
			<include refid="allColumn" />
			 from
			 phb_muser_addrate  
	</select>
	<select id="unique" parameterType="java.util.Map" resultMap="UserAddrate" >
			select
			<include refid="allColumn" />
			 from
			 phb_muser_addrate 
			<include refid="dynamicWhere" />
			limit 1
	</select>

	<sql id="dynamicWhere">
			<trim prefix="WHERE" prefixOverrides="AND|OR">
				<if test="recordId !=null">
					AND record_id = #{recordId}
				</if>
				 
			</trim>
	</sql>
 
 	<!-- order by 排序 -->
	<sql id="dynamicOrderBy">
		<if test="orderBy!=null">
			order by ${orderBy}
			<if test="order!=null">
				${order}
		</if>
		</if>
	</sql>
	

	<insert id="insert" parameterType="com.phb.puhuibao.entity.UserAddrate" >
	    INSERT INTO 
	    phb_muser_addrate(<include refid="allapplColumn"/>	)
		<include refid="allapplColumnVar"/>
	</insert>
	
	<sql id="allapplColumn">
		   
			muser_id,
			rate_id	,
			last_date 
         
	</sql>
	
	
 
	
	<sql id="allapplColumnVar">
		values(
				  
		          #{muserId,             jdbcType=INTEGER},                 
		          #{rateId,              jdbcType=INTEGER},
		          #{lastDate,            jdbcType=DATE} 
		           
		         
		     )
	</sql>
	
	<update id="update" parameterType="com.phb.puhuibao.entity.UserAddrate">
			update phb_muser_addrate
			<trim prefix=" SET " prefixOverrides=",">
				<if test="rateStatus !=null">
					  ,rate_status=#{rateStatus,jdbcType=INTEGER}
				</if>
				 
				
				
			</trim>
			WHERE 
				record_id=#{recordId}
	</update>

	<delete id="delete" parameterType="java.util.Map">
		DELETE FROM phb_muser_addrate 
		where record_id =#{recordId}
	</delete>	
	
	<sql id="queryBody">
		<if test="sno!=null and eno!=null and orderBy!=null">
			select
			<include refid="allColumn" />
			 from
			  phb_muser_addrate   
			<include refid="dynamicWhere" />
			<include refid="dynamicOrderBy" />
			limit ${sno-1},${eno}
		</if>
		<!-- 无orderby -->
		<if test="sno!=null and eno!=null and orderBy==null">
			select
			<include refid="allColumn" />
			 from
			phb_muser_addrate 
			<include refid="dynamicWhere" />
			limit ${sno-1},${eno}
		</if>
	</sql>	

</mapper>




