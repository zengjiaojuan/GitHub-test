<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.ResourceGallery">
  <!-- RESOURCE RESULTMAP -->
  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.ResourceGallery">
    <result property="pictureId" column="picture_id" jdbcType="CHAR" />
	<result property="resourceId" column="resource_id" jdbcType="INTEGER" />
  </resultMap>
  
  <!-- RESOURCE INSERT -->
  <insert id="insert" parameterType="com.phb.puhuibao.entity.ResourceGallery">
    insert into phb_resource_gallery (<include refid="allapplColumn"/>) <include refid="allapplColumnVar"/>
  </insert>
  <!-- RESOURCE UPDATE -->
  <update id="update" parameterType="com.phb.puhuibao.entity.ResourceGallery">
		update phb_resource_gallery
		<trim prefix=" SET " prefixOverrides=",">
			<if test="resourceId != null">
				  ,resource_id=#{resourceId,jdbcType=TINYINT}
			</if>
		</trim>
		where picture_id=#{pictureId}
  </update>
 
  <!-- RESOURCE DELETE -->
  <delete id="delete" parameterType="java.util.Map">
    delete from phb_resource_gallery where picture_id=#{pictureId}
  </delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> from phb_resource_gallery <include refid="dynamicWhere" />
  </select>
  <select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
    <include refid="queryBody" />
  </select>
  <select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
	select count(1) from phb_resource_gallery <include refid="dynamicWhere" />
  </select>
  <select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
	select <include refid="allColumn" /> from phb_resource_gallery <include refid="dynamicWhere" /> limit 1
  </select>
  <select id="getById" parameterType="java.util.Map" resultMap="resourceResultMap">
	select * from phb_resource_gallery where picture_id=#{pictureId}
  </select>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
    picture_id,
    resource_id
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{pictureId,jdbcType=DATE},
			#{resourceId,jdbcType=CHAR}
	)
  </sql>
  <sql id="allColumn">
    picture_id
  </sql>
  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="resourceId != null">
			AND resource_id = #{resourceId}
		</if>
		<if test="pictureId != null">
			AND picture_id = #{pictureId}
		</if>
	</trim>
  </sql>
  <sql id="dynamicOrderBy">
	<if test="orderBy!=null">
		order by ${orderBy}
		<if test="order!=null">
			${order}
		</if>
	</if>
  </sql>

  <sql id="queryBody">
	<if test="sno!=null and eno!=null and orderBy!=null">
		select <include refid="allColumn" /> from phb_resource_gallery
		<include refid="dynamicWhere" />
		<include refid="dynamicOrderBy" />
		limit ${sno-1},${eno}
	</if>
  	<!-- æ— orderby -->
	<if test="sno!=null and eno!=null and orderBy==null">
		select <include refid="allColumn" /> from phb_resource_gallery
		<include refid="dynamicWhere" />
		limit ${sno-1},${eno}
	</if>
  </sql>
</mapper>