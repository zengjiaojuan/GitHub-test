<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.ExperienceValue">
  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.ExperienceValue">
     
    <result property="mUserId"             column="m_user_id"          jdbcType="INTEGER" />
    <result property="experienceType"      column="experience_type"    jdbcType="VARCHAR" />
	<result property="experienceValue"     column="experience_value"   jdbcType="DECIMAL" />
 
 
  </resultMap>
  
  <!-- RESOURCE INSERT -->
  <insert id="insert" useGeneratedKeys="true"   parameterType="com.phb.puhuibao.entity.ExperienceValue">
    insert into phb_muser_experiencevalue (<include refid="allapplColumn"/>) <include refid="allapplColumnVar"/>
  </insert>
  
   
  
  <!-- RESOURCE DELETE -->
  <delete id="delete" parameterType="java.util.Map">
    delete  from phb_muser_experiencevalue   <include refid="dynamicWhere" />
  </delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> 
    from phb_muser_experiencevalue  
    
    <include refid="dynamicWhere" />
  </select>
  <select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
    <include refid="queryBody" />
  </select>
  <select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
	select count(1) from phb_muser_experiencevalue <include refid="dynamicWhere" />
  </select>
  <select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
	select <include refid="allColumn" /> 
	from phb_muser_experiencevalue  
	<include refid="dynamicWhere" />
	 <include refid="dynamicOrderBy" /> limit 1
  </select>
 
  
<update id="update" parameterType="com.phb.puhuibao.entity.ExperienceValue">
		update phb_muser_experiencevalue
		<trim prefix=" SET " prefixOverrides=",">
			<if test="isAccepted != null">
				  ,is_accepted=#{isAccepted,jdbcType=INTEGER}
			</if>
			 				 
		</trim>
		where invite_id=#{inviteId}  
  </update>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
	m_user_id,
	experience_type,
	experience_value  
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{mUserId,             jdbcType=INTEGER},
			#{experienceType,      jdbcType=VARCHAR},
			#{experienceValue,     jdbcType=DECIMAL}  
	      )
  </sql>
  <sql id="allColumn">
  
	m_user_id,
	experience_type,
	experience_value 
 
  </sql>
  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="fromUser != null">
			AND from_user = #{fromUser}
		</if>
		<if test="toUser != null">
			AND to_user = #{toUser}
		</if>
		
		<!--currentuserId 自己关注别人  -->
		<if test="isAccepted != null">
			AND is_accepted = #{isAccepted}
		</if>
		
		<if test="inviteId != null">
			AND invite_id = #{inviteId}
		</if>
	</trim>
  </sql>
  <sql id="dynamicOrderBy">
	<if test="orderBy!=null">
		order by ${orderBy}
		<if test="order!=null">
			${order}
		</if>
	</if>
  </sql>

  <sql id="queryBody">
	<if test="sno!=null and eno!=null and orderBy!=null">
		select <include refid="allColumn" /> from phb_muser_experiencevalue
		<include refid="dynamicWhere" />
		<include refid="dynamicOrderBy" />
		limit ${sno-1},${eno}
	</if>
  	<!-- 无orderby -->
	<if test="sno!=null and eno!=null and orderBy==null">
		select <include refid="allColumn" /> from phb_muser_experiencevalue
		<include refid="dynamicWhere" />
		limit ${sno-1},${eno}
	</if>
  </sql>
</mapper>