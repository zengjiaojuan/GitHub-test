<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phb.puhuibao.entity.ResourceNotice">
  <resultMap id="resourceResultMap" type="com.phb.puhuibao.entity.ResourceNotice">
     
    <result property="noticeId"                column="notice_id"            jdbcType="INTEGER" />
    <result property="noticeUser"              column="notice_user"          jdbcType="INTEGER" />
    <result property="noticeResource"          column="notice_resource"      jdbcType="INTEGER" />
	<result property="noticeTitle"             column="notice_title"         jdbcType="VARCHAR" />
	<result property="noticeMessage"           column="notice_message"       jdbcType="VARCHAR" />
	<result property="isRead"                  column="is_read"              jdbcType="INTEGER" />
	<result property="noticeTime"              column="notice_time"          jdbcType="DATE" />
 
  </resultMap>
  
  <!-- RESOURCE INSERT -->
  <insert id="insert" useGeneratedKeys="true"   parameterType="com.phb.puhuibao.entity.ResourceNotice">
    insert into phb_resource_notice (<include refid="allapplColumn"/>) <include refid="allapplColumnVar"/>
  </insert>
  
   
  
  <!-- RESOURCE DELETE -->
  <delete id="delete" parameterType="java.util.Map">
    delete  from phb_resource_notice   <include refid="dynamicWhere" />
  </delete>
  
  <!-- RESOURCE SELECT -->
  <select id="query" parameterType="java.util.Map" resultMap="resourceResultMap">
    select <include refid="allColumn" /> 
    from phb_resource_notice 
    
    <include refid="dynamicWhere" />
    <include refid="dynamicOrderBy" />
  </select>
  <select id="findByPager" parameterType="java.util.Map" resultMap="resourceResultMap">
    <include refid="queryBody" />
  </select>
  <select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
	select count(1) from phb_resource_notice <include refid="dynamicWhere" />
  </select>
  <select id="unique" parameterType="java.util.Map" resultMap="resourceResultMap" >
	select <include refid="allColumn" /> 
	from phb_resource_notice  
	<include refid="dynamicWhere" />
	 <include refid="dynamicOrderBy" /> limit 1
  </select>
 
  
<update id="update" parameterType="com.phb.puhuibao.entity.ResourceNotice">
		update phb_resource_notice
		<trim prefix=" SET " prefixOverrides=",">
			<if test="isRead != null">
				  ,is_read=#{isRead,jdbcType=INTEGER}
			</if>
			 				 
		</trim>
		where notice_id=#{noticeId}  
  </update>

  <!-- MySQL specific -->
  <sql id="allapplColumn">
	notice_user,
	notice_resource,
	notice_title,
	notice_message 
  </sql>
  <sql id="allapplColumnVar">
	values(
			#{noticeUser,          jdbcType=INTEGER},
			#{noticeResource,      jdbcType=INTEGER},
			#{noticeTitle,         jdbcType=VARCHAR},
			#{noticeMessage,       jdbcType=VARCHAR} 
	      )
  </sql>
  <sql id="allColumn">
  
	notice_id,
	notice_user,
	notice_resource,
	notice_title,
	notice_message,
	is_read,
	notice_time 
 
  </sql>
  <sql id="dynamicWhere">
	<trim prefix="WHERE" prefixOverrides="AND|OR">
		<if test="noticeUser != null">
			AND notice_user = #{noticeUser}
		</if>
		<if test="noticeResource != null">
			AND notice_resource = #{noticeResource}
		</if>
		<if test="noticeId != null">
			AND notice_id = #{noticeId}
		</if>
 
	</trim>
  </sql>
  <sql id="dynamicOrderBy">
	<if test="orderBy!=null">
		order by ${orderBy}
		<if test="order!=null">
			${order}
		</if>
	</if>
  </sql>

  <sql id="queryBody">
	<if test="sno!=null and eno!=null and orderBy!=null">
		select <include refid="allColumn" /> from phb_resource_notice
		<include refid="dynamicWhere" />
		<include refid="dynamicOrderBy" />
		limit ${sno-1},${eno}
	</if>
  	<!-- æ— orderby -->
	<if test="sno!=null and eno!=null and orderBy==null">
		select <include refid="allColumn" /> from phb_resource_notice
		<include refid="dynamicWhere" />
		limit ${sno-1},${eno}
	</if>
  </sql>
</mapper>