<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
    
<mapper namespace="com.phb.puhuibao.entity.GroupRedpacket" >
    <resultMap id="GroupRedpacket" type="com.phb.puhuibao.entity.GroupRedpacket">
            <result property="redpacketId"             column="redpacket_id"            jdbcType="INTEGER" />
            <result property="redpacketUser"           column="redpacket_user"          jdbcType="INTEGER" />
    	    <result property="redpacketUsername"       column="redpacket_username"      jdbcType="VARCHAR" />
    	    <result property="redpacketDesc"           column="redpacket_desc"          jdbcType="VARCHAR" />	    	    	    
    	    <result property="redpacketNumber"         column="redpacket_number"        jdbcType="INTEGER" />
    	    <result property="redpacketAmount"         column="redpacket_amount"        jdbcType="DECIMAL" />
    	    <result property="redpacketStatus"         column="redpacket_status"          jdbcType="INTEGER" />
    	    <result property="redpacketType"           column="redpacket_type"          jdbcType="INTEGER" />
    	    <result property="createTime"              column="create_time"             jdbcType="DATE" />
 
    	    
    	    
	</resultMap>
	
	
	<sql id="allColumn">
	        redpacket_id,
            redpacket_user,
    	    
    	    redpacket_desc,
    	    redpacket_number,
    	    redpacket_amount,
    	    redpacket_type,
    	    redpacket_status,
  
    	    create_time
	</sql>
 
	<select id="findByPager" parameterType="java.util.Map" resultMap="GroupRedpacket">
		<include refid="queryBody" />
	</select>
	
	<select id="GroupRedpacketquery" parameterType="java.util.Map" resultMap="GroupRedpacket">
		<include refid="queryBody" />
	</select>
	
	<select id="query" parameterType="java.util.Map" resultMap="GroupRedpacket">
		select
			<include refid="allColumn" />
			 from
			 phb_group_redpacket  
			<include refid="dynamicWhere" />
		 
	</select>
	
		
	<!-- 3.1.根据对像条件查询记录数 MAP参数 --><select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
		select
		count(1)
		from
		phb_group_redpacket 
		<include refid="dynamicWhere" />
		    
	</select>
	<select id="getById" parameterType="java.util.Map" resultMap="GroupRedpacket">
			select
			<include refid="allColumn" />
			 from
			 phb_group_redpacket  
	</select>
	<select id="unique" parameterType="java.util.Map" resultMap="GroupRedpacket" >
			select
			<include refid="allColumn" />
			 from
			 phb_group_redpacket
			<include refid="dynamicWhere" />
			limit 1
	</select>

	<sql id="dynamicWhere">
			<trim prefix="WHERE" prefixOverrides="AND|OR">
				<if test="redpacketId !=null">
					AND redpacket_id = #{redpacketId}
				</if>
				 
			</trim>
	</sql>
	
 
	
 	<!-- order by 排序 -->
	<sql id="dynamicOrderBy">
		<if test="orderBy!=null">
			order by ${orderBy}
			<if test="order!=null">
				${order}
		</if>
		</if>
	</sql>
	

	<insert id="insert" useGeneratedKeys="true" keyProperty="redpacketId" parameterType="com.phb.puhuibao.entity.GroupRedpacket" >
	    INSERT INTO 
	    phb_group_redpacket(<include refid="allapplColumn"/>	)
		<include refid="allapplColumnVar"/>
	</insert>
	
	<sql id="allapplColumn">
		 
            redpacket_user,
    	    redpacket_desc,
    	    redpacket_number,
    	    redpacket_amount,
    	    redpacket_type
    	     
         
	</sql>
	
	
 
	
	<sql id="allapplColumnVar">
		values(
				  #{redpacketUser,              jdbcType=INTEGER},
		          #{redpacketDesc,              jdbcType=VARCHAR},
		          #{redpacketNumber,            jdbcType=INTEGER},
		          #{redpacketAmount,            jdbcType=DECIMAL},
		          #{redpacketType,              jdbcType=INTEGER}
	 
		     )
	</sql>
	
	 
	
	<update id="update" parameterType="com.phb.puhuibao.entity.GroupRedpacket">
			update phb_group_redpacket
			<trim prefix=" SET " prefixOverrides=",">
				 
				<if test="redpacketStatus !=null">
					  ,redpacket_status=#{redpacketStatus,jdbcType=VARCHAR}
				</if>
 
				 
				
				
			</trim>
			WHERE 
				redpacket_id=#{redpacketId}
	</update>

	<delete id="delete" parameterType="java.util.Map">
		DELETE FROM phb_group_redpacket 
		where record_id =#{recordId}
	</delete>	
	
	<sql id="queryBody">
		<if test="sno!=null and eno!=null and orderBy!=null">
			select
			<include refid="allColumn" />
			 from
			  phb_group_redpacket   
			<include refid="dynamicWhere" />
			<include refid="dynamicOrderBy" />
			limit ${sno-1},${eno}
		</if>
		<!-- 无orderby -->
		<if test="sno!=null and eno!=null and orderBy==null">
			select
			<include refid="allColumn" />
			 from
			phb_group_redpacket 
			<include refid="dynamicWhere" />
			limit ${sno-1},${eno}
		</if>
	</sql>	

</mapper>




