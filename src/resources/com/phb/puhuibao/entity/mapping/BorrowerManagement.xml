<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
    
<mapper namespace="com.phb.puhuibao.entity.BorrowerManagement" >
    <resultMap id="BorrowerManagement" type="com.phb.puhuibao.entity.BorrowerManagement">
            <result property="recordId"                column="record_id"               jdbcType="INTEGER" />
            <result property="borrowerId"              column="borrower_id"             jdbcType="VARCHAR" />
    	    <result property="borrowerId"              column="borrower_id"             jdbcType="VARCHAR" />
    	    <result property="borrowerName"            column="borrower_name"           jdbcType="VARCHAR" />	    	    	    
    	    <result property="borrowerContract"        column="borrower_contract"       jdbcType="VARCHAR" />
    	    <result property="borrowerJob"             column="borrower_job"            jdbcType="INTEGER" />
    	    <result property="warrantStatus"           column="warrant_status"          jdbcType="INTEGER" />
    	    <result property="moneyUseage"             column="money_useage"            jdbcType="INTEGER" />
    	    <result property="contractAmount"          column="contract_amount"         jdbcType="DECIMAL" />
    	    <result property="contractStartdate"       column="contract_startdate"      jdbcType="VARCHAR" />
    	    <result property="contractExpiredate"      column="contract_expiredate"     jdbcType="VARCHAR" />
    	    <result property="filledPct"               column="filled_pct"              jdbcType="DECIMAL" />
    	    <result property="filledAmount"            column="filled_amount"           jdbcType="DECIMAL" />
    	    
    	    
	</resultMap>
	
	
	<sql id="allColumn">
	      record_id,
	      borrower_id,                   
          borrower_name,         
          borrower_contract,     
          borrower_job,          
          warrant_status,        
          money_useage,          
          contract_amount,       
          contract_startdate,    
          contract_expiredate,
          filled_pct,  
          filled_amount
	</sql>
 
	<select id="findByPager" parameterType="java.util.Map" resultMap="BorrowerManagement">
		<include refid="queryBody" />
	</select>
	
	<select id="BorrowerManagementquery" parameterType="java.util.Map" resultMap="BorrowerManagement">
		<include refid="queryBody" />
	</select>
	
	<select id="query" parameterType="java.util.Map" resultMap="BorrowerManagement">
		select
			<include refid="allColumn" />
			 from
			 crm_borrower  
			<include refid="dynamicWhere" />
		 
	</select>
	
		
	<!-- 3.1.根据对像条件查询记录数 MAP参数 --><select id="findByPagerCount" parameterType="java.util.Map" resultType="int" >
		select
		count(1)
		from
		crm_borrower 
		<include refid="dynamicWhere" />
		    
	</select>
	<select id="getById" parameterType="java.util.Map" resultMap="BorrowerManagement">
			select
			<include refid="allColumn" />
			 from
			 crm_borrower  
	</select>
	<select id="unique" parameterType="java.util.Map" resultMap="BorrowerManagement" >
			select
			<include refid="allColumn" />
			 from
			 crm_borrower 
			<include refid="dynamicWhere" />
			limit 1
	</select>

	<sql id="dynamicWhere">
			<trim prefix="WHERE" prefixOverrides="AND|OR">
				<if test="recordId !=null">
					AND record_id = #{recordId}
				</if>
				<if test="filledFinished !=null">
					AND filled_finished = #{filledFinished}
				</if>
				<if test="keyword!=null">
					AND (borrowerName     like  concat('%',#{keyword},'%') 
					OR   borrowerId       like  concat('%',#{keyword},'%') 
					OR   borrowerContract like  concat('%',#{keyword},'%')
				</if>
			</trim>
	</sql>
	
 
	
 	<!-- order by 排序 -->
	<sql id="dynamicOrderBy">
		<if test="orderBy!=null">
			order by ${orderBy}
			<if test="order!=null">
				${order}
		</if>
		</if>
	</sql>
	

	<insert id="insert" parameterType="com.phb.puhuibao.entity.BorrowerManagement" >
	    INSERT INTO 
	    crm_borrower(<include refid="allapplColumn"/>	)
		<include refid="allapplColumnVar"/>
	</insert>
	
	<sql id="allapplColumn">
		  borrower_id,                   
          borrower_name,         
          borrower_contract,     
          borrower_job,          
          warrant_status,        
          money_useage,          
          contract_amount,       
          contract_startdate,    
          contract_expiredate  
         
	</sql>
	
	
 
	
	<sql id="allapplColumnVar">
		values(
				  #{borrowerId,               jdbcType=VARCHAR},
		          #{borrowerName,             jdbcType=VARCHAR},                 
		          #{borrowerContract,         jdbcType=VARCHAR},
		          #{borrowerJob,              jdbcType=INTEGER},
		          #{warrantStatus,            jdbcType=INTEGER},
		          #{moneyUseage,              jdbcType=INTEGER},
		          #{contractAmount,           jdbcType=DECIMAL},
		          #{contractStartdate,        jdbcType=VARCHAR},
		          #{contractExpiredate,       jdbcType=VARCHAR}
		     )
	</sql>
	
	<update id="update" parameterType="com.phb.puhuibao.entity.BorrowerManagement">
			update crm_borrower
			<trim prefix=" SET " prefixOverrides=",">
				<if test="isDeleted!=null">
					  ,is_deleted=#{isDeleted,jdbcType=INTEGER}
				</if>
				 
				
				
			</trim>
			WHERE 
				record_id=#{recordId}
	</update>

	<delete id="delete" parameterType="java.util.Map">
		DELETE FROM crm_borrower 
		where record_id =#{recordId}
	</delete>	
	
	<sql id="queryBody">
		<if test="sno!=null and eno!=null and orderBy!=null">
			select
			<include refid="allColumn" />
			 from
			  crm_borrower   
			<include refid="dynamicWhere" />
			<include refid="dynamicOrderBy" />
			limit ${sno-1},${eno}
		</if>
		<!-- 无orderby -->
		<if test="sno!=null and eno!=null and orderBy==null">
			select
			<include refid="allColumn" />
			 from
			crm_borrower 
			<include refid="dynamicWhere" />
			limit ${sno-1},${eno}
		</if>
	</sql>	

</mapper>




